```{r setup, include=FALSE}
knitr::opts_chunk$set(echo = FALSE, message = FALSE, warning = FALSE, cache = TRUE, fig.align='center')

library(dplyr)
library(leaflet)
library(sf)
#library(mapsBR)
library(sp)
library(rgeos)
library(rgdal)
library(janitor)
library(highcharter)
library(tidyr)
library(ggplot2)

idese = readRDS("data/Idese Municipios 2007-2014.rds") %>% 
  clean_names()

options(scipen = 999)
ideseTest = idese %>% 
  #filter(cod != "4314548") %>% 
  mutate(
    grupoPop = ifelse(populacao<2979, "Pequena", ifelse(populacao<14732, "Média", "Grande"))
  )%>% 
  na.omit()

```

